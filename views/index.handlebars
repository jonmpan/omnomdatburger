{{!-- <div class="pushDownFull"></div> --}}

<div class="container">
	<div class="slider fullscreen">
		<ul class="slides">
			<li>
				<img src="assets/img/background1.jpg">
				<div class="caption center-align">
					<h3>You're Here to Eat a Burger!</h3>
					<div class="row">
						<button data-target="modal2" class="smol-margin btn blue modal-trigger animated infinite pulse">Devour a Burger</button>
						<button data-target="modal1" class="smol-margin btn red modal-trigger">Add a Burger</button>
						<button data-target="modal3" class="smol-margin btn red modal-trigger">Burger Cemetery</button>
						{{!-- <button id="check-date" class="smol-margin btn red">Date</button> --}}
					</div>
					<h5 class="light grey-text text-lighten-3">Click on Devour A Burger to eat someone's (or your own) burger!</h5>
				</div>
			</li>
			<li>
				<img src="assets/img/background2.jpg">
				<div class="caption left-align">
					<h3 class="black-text">You Can Also Add a Burger!</h3>
					<div class="row">
						<button data-target="modal2" class="smol-margin btn blue modal-trigger">Devour a Burger</button>
						<button data-target="modal1" class="smol-margin btn red modal-trigger animated infinite pulse">Add a Burger</button>
						<button data-target="modal3" class="smol-margin btn blue modal-trigger">Burger Cemetery</button>
					</div>
					<h5  class="light black-text">Click on Add a Burger so other people (or you) can eat a burger!</h5>
				</div>
			</li>
			<li>
				<img src="assets/img/background3.jpg">
				<div class="caption right-align">
					<h3 class="purple-text text-darken-2">RIP (Rest In Poop) Burgers</h3>
					<div class="row">
						<button data-target="modal2" class="smol-margin btn black modal-trigger">Devour a Burger</button>
						<button data-target="modal1" class="smol-margin btn black modal-trigger">Add a Burger</button>
						<button data-target="modal3" class="smol-margin btn pink darken-4 modal-trigger animated infinite pulse">Burger Cemetery</button>
					</div>
					<h5 class="purple-text text-darken-2">Click on Burger Cemetery to see some recently murdered burgers...</h5>
				</div>
			</li>
		</ul>
	</div>

	<div id="modal1" class="modal bottom-sheet">
		<div class="modal-content">
			<h4 class="animated slideInUp">Add a burger</h4>
			<form>
				<div class="animated slideInUp">Creator of Burger</div>
				<input class="animated slideInUp" type="text" id="owner">
				<br>
				<div class="animated slideInUp">Burger Name</div>
				<input class="animated slideInUp" type="text" id="name">
				<button class="btn blue animated slideInUp" id="submitBurger">Submit</button>
			</form>		
		</div>
	</div>

	<div id="modal2" class="modal bottom-sheet yellow">
		<div class="modal-content">	
			<h4 class="animated slideInUp center-align">~Delicious Burgers To Devour~</h4>
			<div class="row" id="undevoured-burgers">
			{{#each burgers}}
				{{#unless devoured}}
				<div class="animated slideInUp col s12 m6 l4 smol-bottom-margin center-align">
					<img src="" class="smol-img" datai="{{@index}}">
					<div><strong>{{name}}</strong></div>
					<div>Creator: {{owner}}</div>
					<div>DOB: {{dob}}</div>
					<button class="devour btn green" burgerId="{{id}}" dob="{{dob}}">Devour</button>
					{{!-- <button class="delete btn red rounded" burgerId="{{id}}">Delete</button> --}}
				</div>
				{{/unless}}
			{{/each}}
			</div>
		</div>
	</div>

	<div id="modal3" class="modal bottom-sheet red">
		<div class="modal-content">
			<h4 class="animated slideInUp center-align">...Burger Cemetery...</h4>
			<div class="row" id="devoured-burgers">
			{{#each burgers}}
				{{#if devoured}}
				<div class="animated slideInUp col s12 m6 l4 smol-bottom-margin center-align">
					<img src="" class="smol-img" datai="{{@index}}">
					<div><strong>{{name}}</strong></div>
					<div>Creator: {{owner}}</div>
					<div>DOB: {{dob}}</div>
					<div>DOD: {{dod}}</div>
					{{!-- <button class="delete btn red rounded" burgerId="{{id}}">Delete</button> --}}
				</div>
				{{/if}}	
			{{/each}}
			</div>
		</div>
	</div>

	<div id="modal4" class="modal black">
		<div class="modal-content">
			<h4 class="animated flash infinite center-align red-text text-lighten-3">Are you sure you want to eat this burger?</h4>
			<div class="center-align">
				<img src="assets/img/nastypatty.png" class="responsive-img animated pulse infinite">
				<h4 class="animated shake infinite red-text text-lighten-3">This burger was made <span id="burger-age"></span></h4>
			</div>
			<div class="row center-align">
				<button id="trulyDevour" class="btn-large red center-align waves-effect waves-light" burgerId="">IDGAF! EAT IT!</button>
			</div>
		</div>
	</div>
</div>